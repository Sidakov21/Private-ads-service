<Window x:Class="УП_2_по_ТРПО_Сервис_частных_объявлений.CompletedAdsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Завершенные объявления и прибыль"
        Width="1000" Height="650"
        Background="White"
        Icon="/Фото/Иконка.ico" 
        WindowStartupLocation="CenterScreen">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="💰 Завершенные объявления"
                   Grid.Row="0"
                   FontFamily="Tw Cen MT"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#37474F"
                   Margin="0 0 0 16"/>

        <Border Grid.Row="1" 
                BorderBrush="#FF9C1A" 
                BorderThickness="2" 
                Padding="15" 
                CornerRadius="5" 
                Margin="0 0 0 16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Общая прибыль пользователя:"
                           FontFamily="Tw Cen MT"
                           FontSize="18"
                           VerticalAlignment="Center"
                           Foreground="#37474F"
                           Margin="0 0 10 0"/>
                <TextBlock x:Name="TotalProfitTextBlock"
                           Text="0 руб." 
                           FontFamily="Tw Cen MT"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="#D32F2F"/>
            </StackPanel>
        </Border>

        <ListView x:Name="CompletedAdsList"
                  Grid.Row="2"
                  SelectionMode="Single"
                  BorderThickness="0">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0 0 0 8" Background="#F0F0F0">
                        <StackPanel Orientation="Horizontal">

                            <Image Width="100" Height="100" 
                                   Margin="0 0 16 0" 
                                   Stretch="Fill" 
                                   Source="{Binding DisplayPhotoSource}"/>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding ad_title}"
                                           FontFamily="Tw Cen MT"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="#37474F"/>

                                <TextBlock FontFamily="Tw Cen MT"
                                           FontSize="14"
                                           Foreground="#37474F"
                                           Margin="0 4 0 0">
                                    <Run Text="Продано за: "/>
                                    <Run Text="{Binding price}" FontWeight="Bold" Foreground="#4CAF50"/>
                                    <Run Text=" руб."/>
                                </TextBlock>

                                <TextBlock Text="{Binding Cities.city_name, StringFormat='Город: {0}'}"
                                           FontFamily="Tw Cen MT"
                                           FontSize="12"
                                           Foreground="#78909C"
                                           Margin="0 4 0 0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="Назад"
                Grid.Row="3"
                Width="120"
                Height="38"
                HorizontalAlignment="Left"
                Background="#78909C" 
                Foreground="White"
                FontFamily="Tw Cen MT"
                FontSize="14"
                Padding="10"
                BorderThickness="0"
                Click="BackButton_Click"
                Margin="0 16 0 0"/>
    </Grid>
</Window>