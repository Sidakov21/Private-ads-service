<Window x:Class="УП_2_по_ТРПО_Сервис_частных_объявлений.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сервис частных объявлений"
        Width="1100" Height="720"
        Background="White"
        Icon="/Фото/Иконка.ico">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Логотип и заголовок -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 16">
            <Image Source="/Фото/Лого.png" Height="50"/>
            <TextBlock Text="Сервис частных объявлений"
                       FontFamily="Tw Cen MT"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#37474F"
                       VerticalAlignment="Center"
                       Margin="16 0 0 0"/>
        </StackPanel>

        <!-- Поиск + фильтры -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 16" Grid.Row="1" Height="38">
            <TextBox x:Name="SearchBox"
                     Width="250"
                     Margin="0 0 16 0"
                     Padding="10"
                     FontFamily="Tw Cen MT"
                     FontSize="14"/>

            <ComboBox x:Name="CityFilter" Width="150" Margin="0 0 16 0" Padding="10" Height="38"/>
            <ComboBox x:Name="CategoryFilter" Width="150" Margin="0 0 16 0" Padding="10" Height="38"/>
            <ComboBox x:Name="TypeFilter" Width="150" Margin="0 0 16 0" Padding="10" Height="38"/>
            <ComboBox x:Name="StatusFilter" Width="150" Margin="0 0 16 0" Padding="10" Height="38"/>

            <Button Content="Поиск"
                    Width="120"
                    Height="38"
                    Background="#FF9C1A"
                    Foreground="White"
                    FontFamily="Tw Cen MT"
                    FontSize="14"
                    Padding="10"
                    BorderThickness="0"
                    Click="Search_Click"/>
        </StackPanel>

        <!-- Список объявлений -->
        <ListView x:Name="AdsList"
                  Grid.Row="2"
                  SelectionMode="Single"
                  BorderThickness="0">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0 0 0 16" Background="White">
                        <StackPanel Orientation="Horizontal">

                            <!-- Фото или заглушка -->
                            <Image Width="200" Height="200" 
                                   Margin="0 0 16 0" 
                                   Stretch="Fill" 
                                   Source="{Binding DisplayPhotoSource}"/>

                            <!-- Информация об объявлении -->
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding ad_title}"
                                           FontFamily="Tw Cen MT"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="#37474F"/>

                                <TextBlock Text="{Binding ad_description}"
                                           FontFamily="Tw Cen MT"
                                           FontSize="12"
                                           Foreground="#78909C"
                                           TextWrapping="Wrap"
                                           MaxWidth="600"
                                           Margin="0 4 0 0"/>

                                <TextBlock FontFamily="Tw Cen MT"
                                           FontSize="14"
                                           Foreground="#37474F"
                                           Margin="0 8 0 0">
                                    <Run Text="Цена: "/>
                                    <Run Text="{Binding price}" FontWeight="Bold"/>
                                    <Run Text=" руб."/>
                                </TextBlock>

                                <TextBlock FontFamily="Tw Cen MT"
                                           FontSize="12"
                                           Foreground="#78909C"
                                           Margin="0 4 0 0">
                                    <Run Text="{Binding Cities.city_name}"/>
                                    <Run Text=" • "/>
                                    <Run Text="{Binding Categories.category_name}"/>
                                    <Run Text=" • "/>
                                    <Run Text="{Binding Ad_Types.type_name}"/>
                                </TextBlock>
                            </StackPanel>

                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </Grid>
</Window>