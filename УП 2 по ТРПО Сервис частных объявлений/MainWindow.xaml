<Window x:Class="УП_2_по_ТРПО_Сервис_частных_объявлений.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сервис частных объявлений"
        Width="1300" Height="720"
        Background="White"
        Icon="/Фото/Иконка.ico">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 0 0 16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Image Source="/Фото/Лого.png" Height="50"/>
                <TextBlock Text="Сервис частных объявлений"
                   FontFamily="Tw Cen MT"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#37474F"
                   VerticalAlignment="Center"
                   Margin="16 0 0 0"/>
            </StackPanel>

            <Button x:Name="AuthButton"
            Grid.Column="2"
            Height="38"
            Padding="10"
            Background="#FF9C1A"
            Foreground="White"
            FontFamily="Tw Cen MT"
            FontSize="14"
            BorderThickness="0"
            Content="Личный кабинет"
            Click="AuthButton_Click"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"/>
        </Grid>



        <StackPanel Orientation="Horizontal" Margin="0 0 0 16" Grid.Row="1" Height="38">
            <Grid Width="250" Margin="0 0 16 0" Height="38">

                <TextBox x:Name="SearchBox"
                         Padding="10"
                         FontFamily="Tw Cen MT" 
                         FontSize="14"
                         GotFocus="SearchBox_GotFocus"
                         LostFocus="SearchBox_LostFocus"/>

                <TextBlock x:Name="SearchHint"
                           Text="Введите текст для поиска"
                           FontFamily="Tw Cen MT"
                           FontSize="14"
                           Foreground="#78909C"
                           IsHitTestVisible="False"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </Grid>

            <ComboBox x:Name="CityFilter" IsEditable="True" IsReadOnly="True" Text="Выберите город" Width="160" Margin="0 0 16 0" Padding="10" Height="38"/>
            <ComboBox x:Name="CategoryFilter" IsEditable="True" IsReadOnly="True" Text="Выберите категорию" Width="160" Margin="0 0 16 0" Padding="10" Height="38"/>
            <ComboBox x:Name="TypeFilter" IsEditable="True" IsReadOnly="True" Text="Выберите тип" Width="160" Margin="0 0 16 0" Padding="10" Height="38"/>
            <ComboBox x:Name="StatusFilter" IsEditable="True" IsReadOnly="True" Text="Выберите статус" Width="160" Margin="0 0 16 0" Padding="10" Height="38"/>

            <CheckBox x:Name="ShowMyAdsCheckBox" 
                      Content="Мои объявления"
                      VerticalAlignment="Center"
                      FontFamily="Tw Cen MT"
                      FontSize="14"
                      Foreground="#37474F"
                      Checked="ShowMyAds_Toggle"
                      Unchecked="ShowMyAds_Toggle"
                      Margin="0 0 16 0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0 0 0 16" Height="38">
            <Button Content="Поиск"
                    Width="120"
                    Height="38"
                    Background="#FF9C1A"
                    Foreground="White"
                    FontFamily="Tw Cen MT"
                    FontSize="14"
                    Padding="10"
                    BorderThickness="0"
                    Click="Search_Click"
                    Margin="0 0 16 0"/>

            <Button Content="Сброс"
                    Width="120"
                    Height="38"
                    Background="#78909C" 
                    Foreground="White"
                    FontFamily="Tw Cen MT"
                    FontSize="14"
                    Padding="10"
                    BorderThickness="0"
                    Click="ResetFilters_Click"
                    Margin="0 0 16 0"/>

            <Button x:Name="DeleteAdSelectedButton"
                    Content="Удалить"
                    Width="120"
                    Height="38"
                    Background="#D32F2F"
                    Foreground="White"
                    FontFamily="Tw Cen MT"
                    FontSize="14"
                    Padding="10"
                    BorderThickness="0"
                    Click="DeleteAdSelected_Click"
                    Visibility="Collapsed"
                    Margin="0 0 16 0"/>

            <Button x:Name="AddAdButton"
                    Content="Добавить объявление"
                    Width="Auto"
                    Height="38"
                    Background="#FF9C1A" 
                    Foreground="White"
                    FontFamily="Tw Cen MT"
                    FontSize="14"
                    Padding="10"
                    BorderThickness="0"
                    Click="AddAd_Click"
                    Visibility="Collapsed"/>
        </StackPanel>

        <ListView x:Name="AdsList"
                  Grid.Row="3"
                  SelectionMode="Single"
                  BorderThickness="0"
                  MouseDoubleClick="AdsList_MouseDoubleClick">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" Padding="10" Margin="0 0 0 16" Background="White">
                        <StackPanel Orientation="Horizontal">

                            <Image Width="180" Height="180" 
                                   Margin="0 0 16 0" 
                                   Stretch="Fill" 
                                   Source="{Binding DisplayPhotoSource}"/>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding ad_title}"
                                           FontFamily="Tw Cen MT"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="#37474F"/>

                                <TextBlock Text="{Binding ad_description}"
                                           FontFamily="Tw Cen MT"
                                           FontSize="12"
                                           Foreground="#78909C"
                                           TextWrapping="Wrap"
                                           MaxWidth="600"
                                           Margin="0 4 0 0"/>

                                <TextBlock FontFamily="Tw Cen MT"
                                           FontSize="14"
                                           Foreground="#37474F"
                                           Margin="0 8 0 0">
                                    <Run Text="Цена: "/>
                                    <Run Text="{Binding price}" FontWeight="Bold"/>
                                    <Run Text=" руб."/>
                                </TextBlock>

                                <TextBlock FontFamily="Tw Cen MT"
                                           FontSize="12"
                                           Foreground="#78909C"
                                           Margin="0 4 0 0">
                                    <Run Text="{Binding Cities.city_name}"/>
                                    <Run Text=" • "/>
                                    <Run Text="{Binding Categories.category_name}"/>
                                    <Run Text=" • "/>
                                    <Run Text="{Binding Ad_Types.type_name}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>